<h2><%= t('.title') %></h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for @post do |f| %>
      <div class="edit-post-image">
        <%= image_tag @post.image.small_thumb.url %>
      </div>
      <%= f.input :image %>
      <%= f.hidden_field :image_cache %>
      <%= f.input :description %>
      <%= f.input :commentable, as: :boolean %>
      <%= f.button :submit, t('.submit'), class: "btn btn-primary" %>
    <% end %>
  </div>
