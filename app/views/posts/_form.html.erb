<%= simple_form_for (current_user.nil? ? Post.new : (@post || current_user.posts.build)), remote: true do |f| %>
  <%= f.input :image %>
  <%= f.hidden_field :image_cache %>
  <%= f.input :description %>
  <%= f.input :commentable, as: :boolean %>
  <%= f.button :submit, t('.submit'), class: "btn btn-primary" %>
<% end %>
  