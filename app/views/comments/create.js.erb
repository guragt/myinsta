<% if @comment.persisted? %>
  $("#comments-<%= @comment.parent_type.downcase %>-<%= @comment.parent_id %>").html("<%= escape_javascript(render partial: 'comments/comments_list', locals: { parent: @comment.parent }) %>");
  $("#new-comment-form-<%= @comment.parent_post.id %>").html("<%= escape_javascript(render partial: 'comments/comment_form', locals: { comment: nil, parent: @comment.parent_post }) %>");
  $(".comment-body").removeClass("highlighted");
<% else %>
  $("#new-comment-form-<%= @comment.parent_post.id %>").html("<%= escape_javascript(render partial: 'comments/comment_form', locals: { comment: @comment, parent: @comment.parent }) %>");
<% end %>