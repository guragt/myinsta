<%- if controller_name != 'sessions' %>
  <%= link_to t("views.sessions.new.title"), new_session_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t("views.registrations.new.title"), new_registration_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t("views.passwords.new.title"), new_password_path(resource_name) %><br />
<% end %>
