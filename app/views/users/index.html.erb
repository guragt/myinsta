<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2><%= t('.title') %></h2>
    <ul class="follow-list">
      <% @users.each do |user| %>
        <li class="follow-item">
          <%= link_to image_tag(user.avatar.small_thumb.url), user_path(user), class: 'post-avatar' %>
          <%= link_to "#{user.nickname}", user_path(user), class: 'post-nick' %>
        </li>
      <% end %>
    </ul>
  </div>
</div>