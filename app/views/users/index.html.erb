<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2><%= t('.title', search: params[:q][:name_or_nickname_cont]) %></h2>
    <ul class="user-list">
      <% @users.each do |user| %>
        <li class="user-item">
          <%= render 'avatar_nick_name', user: user %>
          <% unless current_user == user %>
            <div id="follow-form-<%= user.id %>" class="nav-relation follow-button">
              <%= render 'follow_form', user: user %>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
    <div class="text-center">
      <%= paginate @users %>
    </div>
  </div>
</div>
