<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <%= link_to "MyInsta", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if signed_in? %>
          <li>
            <%= link_to new_post_path, { 'data-target' => '#new-modal', 'data-toggle' => 'modal' } do %>
              <i class="glyphicon glyphicon-plus"></i>
            <% end %>
          </li>
          <li class="dropdown">
            <a href="#" id="small-avatar" class="dropdown-toggle" data-toggle="dropdown">
              <%= image_tag current_user.avatar.small_thumb.url %>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t('.profile'), current_user %></li>
              <li><%= link_to t('.settings'), edit_user_registration_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t('.log_out'), destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t('.log_in'), new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>