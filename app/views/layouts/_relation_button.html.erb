<div class="relation-button">
  <div>
    <%= simple_form_for item, remote: true do |f| %>
      <%= f.button :submit, t('.confirm'), class: "btn btn-primary" %>
    <% end %>
  </div>
  <div>
    <%= simple_form_for item, url: relationship_path(item), method: :delete, remote: true do |f| %>
      <%= f.button :submit, t('.delete'), class: "btn btn-default" %>
    <% end %>
  </div>
</div>